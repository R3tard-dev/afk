<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;900&family=JetBrains+Mono&display=swap" rel="stylesheet">
</head>
<body class="bg-slate-50 min-h-screen p-8 font-['Inter']">
    <div class="max-w-4xl mx-auto">
        <div class="flex items-center justify-between mb-8">
            <div>
                <a href="/dash" class="text-xs text-slate-400 uppercase font-black hover:text-slate-900 transition tracking-tighter">‚Üê Back to Fleet</a>
                <h1 class="text-4xl font-black text-slate-900 mt-1"><%= bot.name %></h1>
            </div>
            <div class="flex items-center gap-4">
                <div id="badge" class="px-5 py-2 rounded-full text-[10px] font-black uppercase tracking-widest border transition-all">
                    <span id="statusTxt">Checking...</span>
                </div>
                <button onclick="startBot()" id="sBtn" class="bg-slate-900 text-white px-8 py-2.5 rounded-2xl text-sm font-black shadow-xl hover:scale-105 transition-all">Connect</button>
                <button onclick="stopBot()" id="stopBtn" class="hidden bg-white border-2 border-slate-900 text-slate-900 px-8 py-2.5 rounded-2xl text-sm font-black shadow-xl hover:bg-red-50 hover:border-red-600 hover:text-red-600 transition-all">Disconnect</button>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
            <div class="lg:col-span-3 flex flex-col h-[600px] bg-slate-950 rounded-[2rem] overflow-hidden shadow-2xl border border-slate-800">
                <div id="con" class="flex-1 p-8 font-['JetBrains_Mono'] text-[13px] leading-relaxed overflow-y-auto text-emerald-400/90 selection:bg-emerald-500/30"></div>
                <div class="p-6 bg-slate-900/50 border-t border-slate-800">
                    <div class="flex items-center gap-3">
                        <span class="text-emerald-500 font-black mono text-lg">$</span>
                        <input id="in" type="text" placeholder="Type a command..." class="w-full bg-transparent outline-none border-none text-sm text-white font-mono placeholder:text-slate-700">
                    </div>
                </div>
            </div>

            <div class="space-y-6">
                <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm">
                    <p class="text-[10px] text-slate-400 font-black uppercase mb-1 tracking-widest">Server Address</p>
                    <p class="text-sm font-bold text-slate-900"><%= bot.server_host %></p>
                </div>
                <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm">
                    <p class="text-[10px] text-slate-400 font-black uppercase mb-1 tracking-widest">Status</p>
                    <p id="dL" class="text-sm font-bold text-slate-900">Ready</p>
                </div>
                <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm">
                    <p class="text-[10px] text-slate-400 font-black uppercase mb-1 tracking-widest">Auth</p>
                    <p class="text-sm font-bold text-slate-900 capitalize"><%= bot.auth_type %></p>
                </div>
            </div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const bId = "<%= bot.bot_instance_id %>";
        const con = document.getElementById('con');
        const sBtn = document.getElementById('sBtn');
        const stopBtn = document.getElementById('stopBtn');
        const badge = document.getElementById('badge');
        const statusTxt = document.getElementById('statusTxt');

        socket.emit('join-bot-room', bId);

        async function startBot() {
            sBtn.disabled = true; sBtn.innerText = "Connecting...";
            const res = await fetch(`/start-bot/${bId}`, { method: 'POST' });
            const data = await res.json();
            if(!data.success) { alert("Failed to connect"); resetBtn(); }
        }

        async function stopBot() {
            stopBtn.disabled = true; stopBtn.innerText = "Stopping...";
            await fetch(`/stop-bot/${bId}`, { method: 'POST' });
        }

        function resetBtn() { 
            sBtn.disabled = false; sBtn.innerText = "Connect"; 
            stopBtn.disabled = false; stopBtn.innerText = "Disconnect";
        }

        function updateUI(s) {
            if(s === 'online') {
                badge.className = "px-5 py-2 rounded-full text-[10px] font-black uppercase tracking-widest border border-emerald-200 bg-emerald-50 text-emerald-600";
                statusTxt.innerText = "Online";
                sBtn.classList.add('hidden');
                stopBtn.classList.remove('hidden');
            } else {
                badge.className = "px-5 py-2 rounded-full text-[10px] font-black uppercase tracking-widest border border-slate-200 bg-slate-50 text-slate-400";
                statusTxt.innerText = "Offline";
                sBtn.classList.remove('hidden');
                stopBtn.classList.add('hidden');
                resetBtn();
            }
        }

        socket.on('console', m => {
            const e = document.createElement('div');
            e.className = "mb-1";
            e.innerHTML = `<span class="opacity-20 mr-2 font-black">${new Date().toLocaleTimeString()}</span> ${m}`;
            con.appendChild(e);
            con.scrollTop = con.scrollHeight;
        });

        socket.on('status-update', d => { if(d.botId === bId) updateUI(d.status); });

        document.getElementById('in').addEventListener('keypress', e => {
            if(e.key === 'Enter' && e.target.value.trim()){
                socket.emit('send-command', { botId: bId, command: e.target.value });
                const me = document.createElement('div');
                me.innerHTML = `<span class="text-slate-600 font-bold mr-2">></span> <span class="text-white">${e.target.value}</span>`;
                con.appendChild(me);
                e.target.value = '';
            }
        });

        updateUI("<%= isOnline ? 'online' : 'offline' %>");
    </script>
</body>
</html>