<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;900&display=swap" rel="stylesheet">
</head>
<body class="bg-slate-50 font-['Inter']">
    <div class="max-w-5xl mx-auto py-12 px-6">
        <div class="flex justify-between items-center mb-10">
            <h1 class="text-3xl font-black text-slate-900">Cloud Fleet</h1>
            <button onclick="m(true)" class="bg-slate-900 text-white px-6 py-2.5 rounded-xl text-sm font-bold shadow-lg hover:bg-slate-800 transition">Create Bot</button>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <% bots.forEach(b => { %>
                <a href="/<%= b.bot_instance_id %>/view" class="bg-white border border-slate-200 rounded-2xl p-6 hover:border-slate-400 transition shadow-sm group">
                    <div class="flex items-center gap-3 mb-4">
                        <div id="dot-<%= b.bot_instance_id %>" class="w-3 h-3 rounded-full <%= b.status === 'online' ? 'bg-emerald-500 animate-pulse' : 'bg-slate-300' %>"></div>
                        <h3 class="font-bold text-lg"><%= b.name %></h3>
                    </div>
                    <div class="flex flex-col text-[10px] font-mono text-slate-400 uppercase tracking-widest gap-1">
                        <span>IP: <%= b.server_host %></span>
                        <span id="text-<%= b.bot_instance_id %>" class="<%= b.status === 'online' ? 'text-emerald-500' : 'text-slate-400' %> font-black"><%= b.status %></span>
                    </div>
                </a>
            <% }) %>
        </div>
    </div>

    <div id="mod" class="hidden fixed inset-0 bg-slate-900/60 backdrop-blur-md flex items-center justify-center p-4 z-50">
        <div class="bg-white w-full max-w-sm rounded-3xl shadow-2xl p-8">
            <h2 class="text-2xl font-black mb-6">Deploy Bot</h2>
            <form action="/create-bot" method="POST" class="space-y-4">
                <input type="text" name="name" placeholder="Bot Display Name" class="w-full px-4 py-2.5 border rounded-xl text-sm outline-none focus:ring-2 focus:ring-slate-900" required>
                <input type="text" name="server_host" placeholder="Server IP (e.g. play.hypixel.net)" class="w-full px-4 py-2.5 border rounded-xl text-sm outline-none focus:ring-2 focus:ring-slate-900" required>
                
                <select name="auth_type" onchange="at(this.value)" class="w-full px-4 py-2.5 border rounded-xl text-sm bg-slate-50 outline-none">
                    <option value="offline">Offline / Cracked</option>
                    <option value="microsoft">Microsoft Auth</option>
                </select>

                <div id="off"><input type="text" name="username" placeholder="Minecraft Username" class="w-full px-4 py-2.5 border rounded-xl text-sm outline-none"></div>
                <div id="mic" class="hidden space-y-4">
                    <input type="email" name="email" placeholder="Microsoft Email" class="w-full px-4 py-2.5 border rounded-xl text-sm outline-none">
                    <input type="password" name="password" placeholder="Password" class="w-full px-4 py-2.5 border rounded-xl text-sm outline-none">
                </div>

                <div class="flex gap-3 pt-6">
                    <button type="button" onclick="m(false)" class="flex-1 py-3 text-xs font-black uppercase border rounded-xl">Cancel</button>
                    <button type="submit" class="flex-1 py-3 text-xs font-black uppercase bg-slate-900 text-white rounded-xl">Launch</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        function m(v){ document.getElementById('mod').classList.toggle('hidden', !v); }
        function at(v){
            document.getElementById('mic').classList.toggle('hidden', v==='offline');
            document.getElementById('off').classList.toggle('hidden', v==='microsoft');
        }
        socket.on('status-update', (d) => {
            const dot = document.getElementById(`dot-${d.botId}`);
            const text = document.getElementById(`text-${d.botId}`);
            if(dot && text) {
                dot.className = d.status === 'online' ? "w-3 h-3 rounded-full bg-emerald-500 animate-pulse" : "w-3 h-3 rounded-full bg-slate-300";
                text.innerText = d.status;
                text.className = d.status === 'online' ? "text-emerald-500 font-black" : "text-slate-400 font-black";
            }
        });
    </script>
</body>
</html>