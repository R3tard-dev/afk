<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fleet | Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;900&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .glass-modal { background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(10px); }
    </style>
</head>
<body class="bg-slate-50 min-h-screen p-4 md:p-8">
    <div class="max-w-6xl mx-auto">
        <div class="flex flex-col md:flex-row md:items-center justify-between mb-12 gap-6">
            <div>
                <h1 class="text-4xl font-black text-slate-900 tracking-tighter italic">FLEET <span class="text-slate-300">/</span> DASH</h1>
                <p class="text-slate-500 text-sm font-medium mt-1">Manage and monitor your automated Minecraft instances.</p>
            </div>
            <button onclick="m(true)" class="bg-slate-900 text-white px-8 py-4 rounded-2xl text-sm font-black shadow-2xl hover:scale-105 active:scale-95 transition-all">
                + Deploy New Bot
            </button>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% if (bots.length === 0) { %>
                <div class="col-span-full py-20 text-center border-2 border-dashed border-slate-200 rounded-[3rem]">
                    <p class="text-slate-400 font-bold uppercase tracking-widest text-xs">No bots deployed yet</p>
                </div>
            <% } %>

            <% bots.forEach(bot => { %>
                <a href="/<%= bot.bot_instance_id %>/view" class="group bg-white p-6 rounded-[2.5rem] border border-slate-200 shadow-sm hover:shadow-2xl hover:border-slate-900 transition-all duration-300">
                    <div class="flex justify-between items-start mb-6">
                        <div class="h-14 w-14 bg-slate-100 rounded-2xl flex items-center justify-center group-hover:bg-slate-900 transition-colors duration-300">
                            <span class="text-2xl group-hover:scale-110 transition-transform">ðŸ¤–</span>
                        </div>
                        <div class="flex flex-col items-end">
                            <div class="flex items-center gap-2">
                                <div class="h-2 w-2 rounded-full <%= bot.status === 'online' ? 'bg-emerald-500 animate-pulse' : 'bg-slate-300' %>"></div>
                                <span class="text-[10px] font-black uppercase tracking-widest <%= bot.status === 'online' ? 'text-emerald-600' : 'text-slate-400' %>">
                                    <%= bot.status %>
                                </span>
                            </div>
                            <span class="text-[10px] text-slate-400 font-mono mt-1 tracking-tighter">ID: <%= bot.bot_instance_id %></span>
                        </div>
                    </div>
                    
                    <h3 class="text-xl font-black text-slate-900 mb-1 group-hover:text-blue-600 transition-colors"><%= bot.name %></h3>
                    <p class="text-xs text-slate-500 font-bold mb-6 truncate"><%= bot.server_host %></p>
                    
                    <div class="pt-5 border-t border-slate-50 grid grid-cols-2 gap-4">
                        <div class="flex flex-col">
                            <span class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Connection</span>
                            <span class="text-[11px] font-bold text-slate-700 truncate">
                                <%= bot.proxy ? 'SOCKS5 Proxy' : 'Direct IP' %>
                            </span>
                        </div>
                        <div class="flex flex-col text-right">
                            <span class="text-[9px] font-black text-slate-400 uppercase tracking-widest">Auth Type</span>
                            <span class="text-[11px] font-bold text-slate-700 capitalize"><%= bot.auth_type %></span>
                        </div>
                    </div>
                </a>
            <% }) %>
        </div>
    </div>

    <div id="mod" class="hidden fixed inset-0 bg-slate-900/60 backdrop-blur-md z-50 flex items-center justify-center p-4">
        <div class="glass-modal w-full max-w-md rounded-[3rem] p-10 shadow-2xl border border-white/20 animate-in fade-in zoom-in duration-300">
            <h2 class="text-3xl font-black text-slate-900 mb-2 tracking-tighter italic">NEW DEPLOY</h2>
            <p class="text-slate-500 text-xs font-bold uppercase tracking-widest mb-8">Instance Configuration</p>
            
            <form action="/create-bot" method="POST" class="space-y-4">
                <input type="text" name="name" placeholder="Bot Display Name" class="w-full px-6 py-4 bg-slate-100/50 border border-slate-200 rounded-2xl text-sm font-bold outline-none focus:ring-2 focus:ring-slate-900 transition-all" required>
                
                <div class="grid grid-cols-2 gap-4">
                    <input type="text" name="server_host" placeholder="Server IP:Port" class="w-full px-6 py-4 bg-slate-100/50 border border-slate-200 rounded-2xl text-sm font-bold outline-none focus:ring-2 focus:ring-slate-900 transition-all" required>
                    <input type="text" name="proxy" placeholder="Proxy IP:Port" class="w-full px-6 py-4 bg-slate-100/50 border border-slate-200 rounded-2xl text-sm font-bold outline-none focus:ring-2 focus:ring-slate-900 transition-all">
                </div>

                <div class="space-y-1">
                    <label class="text-[9px] font-black text-slate-400 uppercase ml-4 tracking-widest">Authentication Method</label>
                    <select name="auth_type" onchange="at(this.value)" class="w-full px-6 py-4 bg-slate-100/50 border border-slate-200 rounded-2xl text-sm font-bold outline-none focus:ring-2 focus:ring-slate-900 transition-all appearance-none cursor-pointer">
                        <option value="offline">Offline / Cracked</option>
                        <option value="microsoft">Microsoft Account</option>
                    </select>
                </div>

                <div id="off">
                    <input type="text" name="username" placeholder="Minecraft Username" class="w-full px-6 py-4 bg-slate-100/50 border border-slate-200 rounded-2xl text-sm font-bold outline-none focus:ring-2 focus:ring-slate-900 transition-all">
                </div>

                <div id="mic" class="hidden space-y-4">
                    <div class="bg-blue-50 p-4 rounded-2xl border border-blue-100">
                        <p class="text-[10px] text-blue-700 font-black uppercase tracking-tighter leading-tight">
                            ðŸ’¡ Tip: Leave password blank to use Device Flow (manual code entry).
                        </p>
                    </div>
                    <input type="email" name="email" placeholder="Microsoft Email" class="w-full px-6 py-4 bg-slate-100/50 border border-slate-200 rounded-2xl text-sm font-bold outline-none focus:ring-2 focus:ring-slate-900 transition-all">
                    <input type="password" name="password" placeholder="Password (Optional)" class="w-full px-6 py-4 bg-slate-100/50 border border-slate-200 rounded-2xl text-sm font-bold outline-none focus:ring-2 focus:ring-slate-900 transition-all">
                </div>

                <div class="flex items-center gap-4 pt-6">
                    <button type="button" onclick="m(false)" class="flex-1 py-4 text-xs font-black uppercase tracking-widest text-slate-400 hover:text-slate-900 transition-colors">
                        Cancel
                    </button>
                    <button type="submit" class="flex-[2] py-4 text-xs font-black uppercase tracking-widest bg-slate-900 text-white rounded-2xl shadow-xl hover:shadow-slate-900/40 active:scale-95 transition-all">
                        Launch Bot
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Modal Toggle
        function m(v) { 
            const el = document.getElementById('mod');
            if(v) {
                el.classList.remove('hidden');
                el.classList.add('flex');
            } else {
                el.classList.add('hidden');
                el.classList.remove('flex');
            }
        }
        
        // Auth Toggle Logic
        function at(v) {
            const offGroup = document.getElementById('off');
            const micGroup = document.getElementById('mic');
            
            if(v === 'microsoft') {
                offGroup.classList.add('hidden');
                micGroup.classList.remove('hidden');
            } else {
                offGroup.classList.remove('hidden');
                micGroup.classList.add('hidden');
            }
        }

        // Close modal on escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') m(false);
        });
    </script>
</body>
</html>