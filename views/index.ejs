<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <style>body { font-family: 'Inter', sans-serif; } .hidden { display: none; }</style>
</head>
<body class="bg-slate-50 flex items-center justify-center min-h-screen">
    <div class="w-full max-w-[380px] bg-white rounded-2xl border border-slate-200 shadow-xl p-8">
        <div class="text-center mb-8">
            <h1 class="text-2xl font-bold tracking-tight text-slate-900"></h1>
            <p class="text-sm text-slate-500 mt-1"></p>
        </div>
        <div class="flex p-1 bg-slate-100 rounded-lg mb-6">
            <button id="lT" onclick="sw('l')" class="flex-1 py-1.5 text-sm font-medium rounded-md bg-white shadow-sm">Login</button>
            <button id="rT" onclick="sw('r')" class="flex-1 py-1.5 text-sm font-medium text-slate-500">Register</button>
        </div>
        <% if (error) { %><div class="mb-4 p-3 bg-red-50 text-red-600 text-xs rounded-lg border border-red-100 font-medium"><%= error %></div><% } %>
        <form id="lF" action="/login" method="POST" class="space-y-4">
            <input type="email" name="email" placeholder="Email" class="w-full px-4 py-2 border border-slate-200 rounded-lg text-sm focus:ring-2 focus:ring-slate-900 outline-none" required>
            <input type="password" name="password" placeholder="Password" class="w-full px-4 py-2 border border-slate-200 rounded-lg text-sm focus:ring-2 focus:ring-slate-900 outline-none" required>
            <button class="w-full bg-slate-900 text-white py-2.5 rounded-lg text-sm font-semibold hover:bg-slate-800 transition">Sign In</button>
        </form>
        <form id="rF" action="/register" method="POST" class="space-y-4 hidden">
            <input type="email" name="email" placeholder="Email Address" class="w-full px-4 py-2 border border-slate-200 rounded-lg text-sm focus:ring-2 focus:ring-slate-900 outline-none" required>
            <input type="password" name="password" placeholder="Create Password" class="w-full px-4 py-2 border border-slate-200 rounded-lg text-sm focus:ring-2 focus:ring-slate-900 outline-none" required>
            <button class="w-full bg-emerald-600 text-white py-2.5 rounded-lg text-sm font-semibold hover:bg-emerald-700 transition">Create Account</button>
        </form>
    </div>
    <script>
        function sw(t){
            document.getElementById('lF').classList.toggle('hidden', t==='r');
            document.getElementById('rF').classList.toggle('hidden', t==='l');
            document.getElementById('lT').className = t==='l' ? 'flex-1 py-1.5 text-sm font-medium rounded-md bg-white shadow-sm' : 'flex-1 py-1.5 text-sm font-medium text-slate-500';
            document.getElementById('rT').className = t==='r' ? 'flex-1 py-1.5 text-sm font-medium rounded-md bg-white shadow-sm' : 'flex-1 py-1.5 text-sm font-medium text-slate-500';
        }
    </script>
</body>
</html>